<!doctype html>
<html lang="en" ng-app="myApp" ng-controller="productController">
<head><title>Index</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet"/>
    <link href="~/Angular/app/app.css" rel="stylesheet" />
</head>
<body>
    <div class="container">

        <a href="Create" type="button" class="btn btn-primary create" >Create Product {{5+5}}</a><hr />
        <div class="row">
            <div class="col-lg-12">
                <h2>Products</h2>
            </div>
        </div><br />
        <div class="table-responsive">
            <table class="table table-hover"><thead>
    <tr>
        <th>Product Name</th>
        <th>Product Details</th>
        <th>Product Price</th>
        <th></th>
    </tr>
</thead>
                <tbody>
                    <tr ng-repeat="product in ProductsIndex">

                        <td>{{product.name}}</td>

                        <td>{{product.details}}</td>

                        <td>{{product.price}}</td>
                        
                        <td>
                            <input type="button" class="btn btn-info" value="Details" ng-click="getDetailsProduct()"/>
                            <Input type="button" class="btn btn-warning" value="Edit" ng-click="getEditProduct()" />
                            <input type="button" class="btn btn-danger" value="Delete" ng-click="getDeleteProduct()" />
                        </td>
                    </tr>
                </tbody>
</table>
        </div>
        </div>
<script src="~/Scripts/jquery-2.2.0.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/angular.js"></script>
<script src="~/Angular/app/app.js"></script>
<script src="~/Angular/app/Controllers/ProductController.js"></script>
</body>
</html>
